            android:scaleType="fitXY" />

        <Button
            android:id="@+id/btnCloseCamera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:background="#fff"
